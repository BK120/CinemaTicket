<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/walletactivity_drawerlayout"
    tools:context="com.bk120.cinematicket.activitys.WalletActivity">
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@mipmap/bg2"
        android:tag="main"
        >
        <RelativeLayout
            android:layout_height="45dp"
            android:layout_width="match_parent"
            android:background="#1F9BEA"
            >
            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@mipmap/back"
                android:onClick="back"
                android:id="@+id/walletactvity_toolbar_back"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                />
            <TextView
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="钱包中心"
                android:textSize="18sp"
                android:layout_alignLeft="@id/walletactvity_toolbar_back"
                android:layout_marginLeft="100dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="#ffffff"
                />
            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:textColor="#fff"
                android:onClick="addCard"
                android:text="添加账户"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="#00000000"
                android:gravity="center"
                android:id="@+id/walletactivity_main_addcard_btn"
                android:drawableRight="@mipmap/add_white"
                />
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/walletactivity_main_recycleview"
            />
    </LinearLayout>
    <FrameLayout
        android:layout_height="match_parent"
        android:layout_width="280dp"
        android:id="@+id/walletactivity_framelayout"
        android:layout_gravity="right"
        android:tag="right"
        />

</android.support.v4.widget.DrawerLayout>
