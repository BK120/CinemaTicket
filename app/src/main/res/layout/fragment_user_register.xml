<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_login"
    tools:context="com.bk120.cinematicket.fragments.UserRegisterFragment">
    <LinearLayout
        android:layout_height="50dp"
        android:layout_width="300dp"
        android:orientation="horizontal"
        android:id="@+id/registerfragment_password_ll"
        android:background="@drawable/addressactivity_searchbtn_shape"
        android:layout_centerInParent="true"
        >
        <TextView
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="密码:"
            android:textSize="18sp"
            android:textColor="#ea8010"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:drawableLeft="@mipmap/mima"
            />
        <EditText
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:singleLine="true"
            android:maxLength="10"
            android:inputType="textPassword"
            android:background="@drawable/addressactivity_searchbtn_shape"
            android:id="@+id/registerfragment_password_et"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_height="50dp"
        android:layout_width="300dp"
        android:orientation="horizontal"
        android:id="@+id/registerfragment_name_ll"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/registerfragment_password_ll"
        android:layout_marginBottom="70dp"
        android:background="@drawable/addressactivity_searchbtn_shape"
        >
        <TextView
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="账户:"
            android:textSize="18sp"
            android:textColor="#ea8010"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:drawableLeft="@mipmap/user"
            />
        <EditText
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:singleLine="true"
            android:maxLength="10"
            android:background="@drawable/addressactivity_searchbtn_shape"
            android:id="@+id/registerfragment_username_et"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_height="50dp"
        android:layout_width="300dp"
        android:orientation="horizontal"
        android:id="@+id/registerfragment_password_confirm_ll"
        android:background="@drawable/addressactivity_searchbtn_shape"
        android:layout_below="@id/registerfragment_password_ll"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="确认:"
            android:textSize="18sp"
            android:textColor="#ea8010"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:drawableLeft="@mipmap/mima"
            />
        <EditText
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:singleLine="true"
            android:maxLength="10"
            android:inputType="textPassword"
            android:background="@drawable/addressactivity_searchbtn_shape"
            android:id="@+id/registerfragment_password_confirm_et"
            />
    </LinearLayout>
    <Button
        android:layout_height="45dp"
        android:layout_width="200dp"
        android:text="REGISTER"
        android:textColor="#ff0000"
        android:textSize="20sp"
        android:id="@+id/registerfragment_register_btn"
        android:layout_centerHorizontal="true"
        android:background="@drawable/addressactivity_searchbtn_selector"
        android:layout_below="@id/registerfragment_password_confirm_ll"
        android:layout_marginTop="30dp"
        />
    <ImageView
        android:layout_height="80dp"
        android:layout_width="80dp"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/registerfragment_name_ll"
        android:layout_marginBottom="70dp"
        android:src="@mipmap/bk120"
        />
</RelativeLayout>
