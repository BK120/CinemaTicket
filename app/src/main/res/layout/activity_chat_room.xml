<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg2"
    tools:context="com.bk120.cinematicket.activitys.ChatRoomActivity">
    <RelativeLayout
        android:layout_height="45dp"
        android:layout_width="match_parent"
        android:background="#1F9BEA"
        >
        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@mipmap/back"
            android:onClick="back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="友情聊天室"
            android:textSize="18sp"
            android:layout_alignLeft="@id/addressactivity_toolbar_back"
            android:layout_marginLeft="100dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="#ffffff"
            />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginBottom="55dp"
        android:id="@+id/chatroomactivity_recycleview"
        android:layout_marginTop="50dp"
        />

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="#FCF7F7"
        android:layout_alignParentBottom="true"
        >
        <ImageView
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/voice"
            android:id="@+id/chatroomactivity_voice_iv"
            />
        <EditText
            android:layout_height="40dp"
            android:layout_width="wrap_content"
            android:ems="11"
            android:paddingLeft="5dp"
            android:layout_centerVertical="true"
            android:background="@drawable/addressactivity_recycleview_item_selelctor"
            android:id="@+id/chatroomactivity_text_tv"
            android:layout_centerInParent="true"
            />
        <Button
            android:layout_height="40dp"
            android:layout_width="50dp"
            android:text="发送"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:onClick="sendMessage"
            android:textColor="@color/colorWhite"
            android:id="@+id/chatroomactivity_send_btn"
            android:background="@drawable/addressactivity_searchbtn_selector"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

</RelativeLayout>
